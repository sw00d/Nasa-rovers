.container {
  display flex
  flex-direction column
  align-items center
}

.main {
  width 100%;
  //min-height: 100vh;
  padding: 4rem 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  max-width 1080px;
}
.main_title
  font-size 50px
  color white
  font-weight 600
  max-width 1080px;
  text-transform capitalize;


.header {
  display: flex;
  width 100%;
  justify-content: center;
  align-items: center;
  background var(--primary)
}

@media only screen and (max-width: 1080px)
  .main, .main_title
    max-width: 545px;


@media only screen and (max-width: 540px)
  .main, .main_title
    max-width: 270px;

